---
import MainLayout from "../layouts/MainLayout.astro";
import tailwind from "../styles/tailwind.css";
import Button from '../components/Button.astro';
import Header from '../components/Header.astro';
import Icon from '../components/Icon.astro';
import Travelform from '../components/Travelform.astro';
import Travelform2 from '../components/Travelform2.astro';
import Dropdown from '../components/Dropdown.astro';
import Trustpilot from '../components/Trustpilot.astro';
import Card from '../components/Card.astro';
import Form from '../components/Card.astro';
import Button2 from '../components/Button2.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Travelform">
	
    <div class="top-2 p-2 w-full z-50 ">
        <Header />
        </div>

<section class="container mx-auto m-sectiontop px-4">
        

          <div id="section1" class="pt-10">
            <progress class="progress w-150" value="0" max="100"></progress>
            <h2>1/3</h2>

          <Travelform
          
        img="travelform1.webp" 
        imgtekst="japan"
        titel="Hvor vil du gerne hen?"
        tekst="Hvilken verdensdel drømmer du mest om?"
        mulighed1="Europa"
        mulighed2="Sydamerika"
        mulighed3="Asien"
        mulighed4="Afrika"
        url1="#section2"
        url2="#section2"
        urlbuttontekst2="Næste"
        urlbuttontekst1="Tilbage"
          ></Travelform>
        </div>

          <ul class="steps pt-10">
            <progress class="progress w-150" value="10" max="100"></progress>
            <h2>2/3</h2>
          </ul>

          <div id="section2" class="pt-10">
          <Travelform2 
          img="travelform2.webp" 
          imgtekst="japan"
          titel="Hvor vil du gerne hen?"
          tekst="Hvilken verdensdel drømmer du mest om?"
          mulighed1="Europa"
          mulighed2="Sydamerika"
          mulighed3="Asien"
          mulighed4="Afrika"
          url1="section1"
           url2="section3"
          urlbuttontekst2="Næste"
          urlbuttontekst1="Tilbage"
            ></Travelform2>
          </div>

            <ul class="steps pt-10">
              <progress class="progress w-150" value="40" max="100"></progress>
              <h2>3/3</h2>
            </ul>
 
            <section id="section3">
            <Travelform
            img="travelform3.webp" 
            imgtekst="japan"
            titel="Hvor vil du gerne hen?"
            tekst="Hvilken verdensdel drømmer du mest om?"
            mulighed1="Europa"
            mulighed2="Sydamerika"
            mulighed3="Asien"
            mulighed4="Afrika"
            url1="section2"
           url2="section3"
            urlbuttontekst2="Næste"
            urlbuttontekst1="Tilbage"
              ></Travelform>
            </section>

  </MainLayout>
