---
import Heading from '../components/Heading.astro';
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';

const { url="#", cardimage="", cardimagealt="",  cardtitel="", cardtekst="" } = Astro.props;
---

<div class="card  w-full shadow-md bg-white rounded-3xl">
    <figure class="relative pt-8 w-full">
      <img class=" rounded-3xl"
       src={cardimage}
       alt={cardimagealt} />
    </figure>
    <div class="card-body p-8">
        <h1 class="text-brown text-lg font-brico">{cardtitel}</h1>
      <p class="text-brown font-brico text-md">{cardtekst}</p>
    </div>
  </div>